{
  "openapi": "3.0.0",
  "info": {
    "title": "Business, Products & Services API",
    "description": "API for managing users, businesses, products, and services. Protected routes require JWT Bearer authentication.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://runvos-bm-app.onrender.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user (manual sign-up)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/User" } }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login with email and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "format": "password" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful - returns JWT tokens" },
          "400": { "description": "Invalid credentials" }
        }
      }
    },
    "/auth/google": {
      "get": {
        "summary": "Google OAuth login",
        "description": "Redirects user to Google sign-in page. **Note:** This endpoint initiates an OAuth redirect and **cannot be run inside Swagger UI**. Please open this URL directly in your browser to sign in with Google.",
        "responses": { "302": { "description": "Redirect to Google login" } }
      }
    },
    "/auth/refresh": {
      "post": {
        "summary": "Refresh access token",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "refreshToken": { "type": "string" } },
                "required": ["refreshToken"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "New access token issued" },
          "403": { "description": "Invalid refresh token" }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout user",
        "responses": { "200": { "description": "Logout successful" } }
      }
    },

    "/api/businesses": {
      "get": {
        "summary": "Get all businesses",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "List of businesses" } }
      },
      "post": {
        "summary": "Create a business",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Business" } } }
        },
        "responses": { "201": { "description": "Business created" } }
      }
    },
    "/api/businesses/my": {
      "get": {
        "summary": "Get all businesses owned by logged-in user",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "List of user's businesses" } }
      }
    },
    "/api/businesses/{id}": {
      "get": {
        "summary": "Get a business by ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Business details" }, "404": { "description": "Not found" } }
      },
      "put": {
        "summary": "Update a business",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Business" } } } },
        "responses": { "200": { "description": "Updated" }, "404": { "description": "Not found" } }
      },
      "delete": {
        "summary": "Delete a business",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "responses": { "204": { "description": "Deleted" }, "404": { "description": "Not found" } }
      }
    },

    "/api/products": {
      "post": {
        "summary": "Create a product",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } }
        },
        "responses": { "201": { "description": "Product created" } }
      }
    },
    "/api/products/business/{businessId}": {
      "get": {
        "summary": "Get all products for a business",
        "parameters": [{ "name": "businessId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "List of products" } }
      }
    },
    "/api/products/{id}": {
      "put": {
        "summary": "Update a product",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Product" } } } },
        "responses": { "200": { "description": "Updated" } }
      },
      "delete": {
        "summary": "Delete a product",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "responses": { "204": { "description": "Deleted" } }
      }
    },

    "/api/services": {
      "post": {
        "summary": "Create a service",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Service" } } }
        },
        "responses": { "201": { "description": "Service created" } }
      }
    },
    "/api/services/business/{businessId}": {
      "get": {
        "summary": "Get all services for a business",
        "parameters": [{ "name": "businessId", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "List of services" } }
      }
    },
    "/api/services/{id}": {
      "put": {
        "summary": "Update a service",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Service" } } } },
        "responses": { "200": { "description": "Updated" } }
      },
      "delete": {
        "summary": "Delete a service",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "security": [{ "bearerAuth": [] }],
        "responses": { "204": { "description": "Deleted" } }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string", "format": "password" },
          "googleId": { "type": "string" },
          "address": {
            "type": "object",
            "properties": {
              "street": { "type": "string" },
              "city": { "type": "string" },
              "state": { "type": "string" },
              "zip": { "type": "string" }
            }
          },
          "phone": { "type": "string" },
          "birthdate": { "type": "string", "format": "date" },
          "gender": { "type": "string" }
        },
        "required": ["firstName", "lastName", "email"]
      },
      "Business": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },                
          "businessName": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "dateEstablished": { "type": "string", "format": "date" },
          "contact": { "type": "string" }
        },
        "required": ["userId", "businessName", "description"]
      },
      "Product": {
        "type": "object",
        "properties": {
          "businessId": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" },
          "stock": { "type": "integer" }
        },
        "required": ["businessId", "name", "price"]
      },
      "Service": {
        "type": "object",
        "properties": {
          "businessId": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "price": { "type": "number" }
        },
        "required": ["businessId", "name", "price"]
      }
    }
  }
}
